{
  "consumer": {
    "name": "AnimalShelterFront"
  },
  "provider": {
    "name": "AnimalShelterBack"
  },
  "interactions": [
    {
      "description": "a request to register an animal",
      "providerState": "register an animal",
      "request": {
        "method": "POST",
        "path": "/animals",
        "body": {
          "name": "Pelusa",
          "breed": "Siames",
          "gender": "Male",
          "isVaccinated": true
        }
      },
      "response": {
        "status": 201,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "name": "manchas",
          "breed": "Bengali",
          "gender": "Female",
          "vaccinated": true
        },
        "matchingRules": {
          "$.body": {
            "match": "type"
          },
          "$.body.name": {
            "match": "type"
          },
          "$.body.breed": {
            "match": "type"
          },
          "$.body.gender": {
            "match": "type"
          },
          "$.body.vaccinated": {
            "match": "type"
          }
        }
      }
    },
    {
      "description": "a request to list all animals",
      "providerState": "list animals",
      "request": {
        "method": "GET",
        "path": "/animals"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": [
          {
            "name": "manchas",
            "breed": "Bengali",
            "gender": "Female",
            "vaccinated": true
          }
        ],
        "matchingRules": {
          "$.body": {
            "min": 1
          },
          "$.body[*].*": {
            "match": "type"
          },
          "$.body[*].name": {
            "match": "type"
          },
          "$.body[*].breed": {
            "match": "type"
          },
          "$.body[*].gender": {
            "match": "type"
          },
          "$.body[*].vaccinated": {
            "match": "type"
          }
        }
      }
    },
    {
      "description": "a request to delete an animal",
      "providerState": "delete an animal",
      "request": {
        "method": "DELETE",
        "path": "/animals/Pelusa"
      },
      "response": {
        "status": 204,
        "headers": {
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}